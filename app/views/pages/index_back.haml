:javascript
  soundManager.url = '/assets'; 
  soundManager.debugMode = true

%form{:onsubmit => "return false;"}
  %select#v{:name => "v"}
    %option{:selected => "selected", :value => "en"} English
    %option{:value => "de"} German
    %option{:value => "fr"} French
    %option{:value => "es"} Spanish
    %option{:value => "ro"} Romanian
    %option{:value => "sr"} Serbian 

  %select#g{:name => "g"}
    %option{:value => "m1"} Male 1
    %option{:value => "m2"} Male 2
    %option{:value => "m3"} Male 3
    %option{:value => "m4"} Male 4
    %option{:value => "m5"} Male 5
    %option{:value => "m6"} Male 6
    %option{:value => "m7"} Male 7
    %option{:value => "f1"} Female 1
    %option{:value => "f2"} Female 2
    %option{:value => "f3"} Female 3
    %option{:value => "f4"} Female 4
    %option{:value => "f5"} Female 5
    %option{:value => "en-f2"} Female 6
    %option{:value => "whisper"} Whisper Male
    %option{:value => "whisperf"} Whisper Female
    %option{:value => "klatt"} Klatt 1
    %option{:value => "klatt2"} Klatt 2
    %option{:value => "klatt3"} Klatt 3
    %option{:value => "croak"} Croak

  %select#p{:name => "p"}
    %option{:value => "0"} low pitch
    %option{:selected => "selected", :value => "40"} midium pitch
    %option{:value => "99"} high pitch 

  %select#s{:name => "s"}
    %option{:value => "80"} slow
    %option{:selected => "selected", :value => "140"} normal
    %option{:value => "370"} fast
   
  %input#t{:name => "t", :type => "text"} 
  %button{:type => "submit"} Submit
#sm2-container.movieContainer{:style => "position: absolute; width: 1px; height: 1px; top: 50px; left: 50px; "}
  %embed{:name => "sm2movie", :id => "sm2movie", :src => "/assets/soundmanager2.swf", :width => "100%", :height => "100%", :quality => "high", :allowscriptaccess => "always", :bgcolor => "#ffffff", :pluginspage => "http://www.macromedia.com/go/getflashplayer", :type => "application/x-shockwave-flash", :wmode => ""}
  
  
:javascript
    function play() {
      params = 'text=' + $('#t').val() + '&voice=' + $('#v').val() + '&gender=' + $('#g').val() + '&pitch=' + $('#p').val() + '&speed=' + $('#s').val();
      soundManager.createSound({id: params, url: 'http://mathieu.artfox.com/speakers/output?' + params}).play();
      $('#t').focus();
    }

    $('#t').keyup(function(e) {
      if (e.keyCode == 13) {
        play();
      }
    });

    $(function() {
      $('#t').focus();
    }); 
